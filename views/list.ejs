<!-- For using EJS its mandatory to create a dir 'views' and have a .ejs file inside it. -->
<%- include('header'); -%>

  <div id="heading" class="box">
    <h1>
      <%= listName %>
    </h1>
  </div>

  <div class="box">

    <% newListItems.forEach((obj) => { %>
    <form action="/delete" method="post"> 
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%= obj._id %>" onChange="this.form.submit()" />
      <p>
        <%= obj.name %>
      </p>
    </div>
    <input type="hidden" name="listName" value="<%= listName %>" />
    </form> 
    <% }) %>

    <form class="item" action="/" method="post">
      <input type="text" name="newTask" placeholder="New Task" autocomplete="off" />
      <button type="submit" name="list" value="<%= listName %>">+</button>
    </form>
  </div>

  <%- include('footer'); -%>